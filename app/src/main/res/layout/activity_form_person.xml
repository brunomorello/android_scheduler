<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText android:id="@+id/activity_form_person_editText_name"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="@string/name"
        android:inputType="textCapWords"
        android:layout_height="wrap_content"
        android:autofillHints="" />

    <EditText android:id="@+id/activity_form_person_editText_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="@string/phone"
        android:inputType="phone"
        android:autofillHints="" />

    <EditText android:id="@+id/activity_form_person_editText_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:autofillHints="" />

    <Button android:id="@+id/activity_form_person_btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/save"
        />

</LinearLayout>

</ScrollView>